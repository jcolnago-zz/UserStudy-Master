<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="5"
        android:columnCount="7"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/demoImage"
            android:layout_alignParentTop="false"
            android:layout_alignTop="@+id/textView"
            android:layout_alignBottom="@+id/textView"
            android:layout_marginLeft="20dp"
            android:layout_alignParentLeft="true"
            android:contentDescription="image to identify if demographics were done and/or uploaded" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/demographics"
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/demoImage"
            android:layout_marginLeft="15dp" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/scenarioImage"
            android:layout_alignParentTop="false"
            android:layout_alignTop="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_marginLeft="20dp"
            android:layout_alignParentLeft="true"
            android:contentDescription="image to identify if scenarios were done and/or uploaded" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/scenarios"
            android:id="@+id/textView2"
            android:layout_below="@+id/textView"
            android:layout_marginTop="10dp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:layout_alignLeft="@+id/textView" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="20dp">

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar"
                android:indeterminate="false"
                android:max="1"
                android:progress="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/pending_question"
                android:id="@+id/pending_question"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:layout_marginBottom="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/pending_help"
                android:id="@+id/pending_help"
                android:visibility="gone" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/editText"
                android:visibility="gone" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/next"
                android:id="@+id/pending_next"
                android:layout_gravity="right"
                android:onClick="nextPending"
                android:layout_marginBottom="50dp"
                android:visibility="gone" />
        </LinearLayout>


    </RelativeLayout>
</ScrollView>